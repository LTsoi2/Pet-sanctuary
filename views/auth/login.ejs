<%- include('../partials/header', { title: 'User Login' }) %>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center mb-0">User Login</h2>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                
                <!-- OAuth Login Buttons -->
                <div class="mb-4">
                    <a href="/auth/google" class="btn btn-outline-danger w-100 mb-2">
                        <i class="fab fa-google me-2"></i>Login with Google
                    </a>
                    <a href="/auth/facebook" class="btn btn-outline-primary w-100">
                        <i class="fab fa-facebook me-2"></i>Login with Facebook
                    </a>
                </div>
                
                <div class="text-center mb-3">
                    <span class="bg-light px-3">OR</span>
                </div>
                
                <!-- Traditional Login Form -->
                <form method="POST" action="/auth/login">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" required 
                               placeholder="Enter your username">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" required 
                               placeholder="Enter your password">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                
                <div class="text-center mt-3">
                    <p>Don't have an account? <a href="/auth/register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer', { dbStatus: dbStatus }) %>
