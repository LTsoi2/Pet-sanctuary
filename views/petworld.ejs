<%- include('partials/header', { title: 'Pet World' }) %>
<div class="pet-world-container">
    <!-- Pet World Background with Slideshow -->
    <div class="pet-world-background">
        <div class="background-slide slide-1 active"></div>
        <div class="background-slide slide-2"></div>
        <div class="background-slide slide-3"></div>
    </div>
    
    <!-- User's Pets in Random Positions -->
    <% if (typeof pets !== 'undefined' && pets.length > 0) { %>
        <% pets.forEach((pet, index) => { %>
        <div class="world-pet" 
             style="top: <%= Math.random() * 70 + 15 %>%; 
                    left: <%= Math.random() * 80 + 10 %>%; 
                    animation-delay: <%= index * 0.5 %>s;"
             data-pet-id="<%= pet._id %>">
            <img src="<%= pet.imageUrl %>" alt="<%= pet.name %>" class="world-pet-image">
            <div class="pet-name"><%= pet.name %></div>
        </div>
        <% }) %>
    <% } else { %>
        <div class="no-pets-message">
            <div class="card">
                <div class="card-body text-center">
                    <h3>üåç Welcome to Pet World!</h3>
                    <p class="lead">This is where your pets come to life and explore together.</p>
                    <p>Adopt some pets first to see them playing in this magical world!</p>
                    <a href="/pets/create" class="btn btn-primary btn-lg me-3">Adopt Your First Pet</a>
                    <a href="/encyclopedia" class="btn btn-outline-info">View Encyclopedia</a>
                </div>
            </div>
        </div>
    <% } %>
</div>

<style>
.pet-world-container {
    position: relative;
    width: 100%;
    height: calc(100vh - 200px);
    min-height: 600px;
    overflow: hidden;
}

/* Background Slideshow - Fixed to cover entire screen */
.pet-world-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.background-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0;
    transition: opacity 1s ease-in-out;
}

.background-slide.active {
    opacity: 1;
}

.slide-1 {
    background-image: url('/images/petworldbackground.gif');
}

.slide-2 {
    background-image: url('/images/petworldbackground2.gif');
}

.slide-3 {
    background-image: url('/images/petworldbackground3.gif');
}

.pet-world-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    z-index: 2;
}

.world-pet {
    position: absolute;
    z-index: 3;
    cursor: pointer;
    animation: float-world 6s ease-in-out infinite;
    transition: transform 0.3s ease;
    text-align: center;
}

.world-pet:hover {
    transform: scale(1.2);
    z-index: 4;
}

@keyframes float-world {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    33% {
        transform: translateY(-20px) rotate(5deg);
    }
    66% {
        transform: translateY(10px) rotate(-5deg);
    }
}

.world-pet-image {
    width: 80px;
    height: 80px;
    object-fit: contain;
    display: block;
    margin: 0 auto;
}

.pet-name {
    margin-top: 5px;
    font-size: 0.9rem;
    color: #333;
    background: rgba(255, 255, 255, 0.8);
    padding: 2px 6px;
    border-radius: 10px;
    font-weight: normal;
}

.no-pets-message {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    width: 90%;
    max-width: 500px;
}

/* Responsive design */
@media (max-width: 768px) {
    .pet-world-container {
        height: calc(100vh - 150px);
        min-height: 500px;
    }
    
    .world-pet-image {
        width: 80px;
        height: 80px;
    }
    
    .pet-name {
        font-size: 0.8rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Background slideshow functionality
    const backgroundSlides = document.querySelectorAll('.background-slide');
    let currentBackgroundSlide = 0;
    let backgroundInterval;
    
    function showBackgroundSlide(index) {
        // Hide all slides
        backgroundSlides.forEach(slide => {
            slide.classList.remove('active');
        });
        
        // Show the selected slide
        backgroundSlides[index].classList.add('active');
        
        currentBackgroundSlide = index;
    }
    
    function nextBackgroundSlide() {
        let nextIndex = (currentBackgroundSlide + 1) % backgroundSlides.length;
        showBackgroundSlide(nextIndex);
    }
    
    // Start background slideshow (change every 3 seconds)
    function startBackgroundSlideshow() {
        backgroundInterval = setInterval(nextBackgroundSlide, 3000);
    }
    
    // Initialize background slideshow
    startBackgroundSlideshow();
    
    // Add click event to all world pets
    const worldPets = document.querySelectorAll('.world-pet');
    worldPets.forEach(pet => {
        pet.addEventListener('click', function() {
            const petId = this.getAttribute('data-pet-id');
            window.location.href = `/pets/${petId}`;
        });
    });
    
    // Add some interactive effects
    worldPets.forEach(pet => {
        pet.addEventListener('mouseenter', function() {
            this.style.animationPlayState = 'paused';
        });
        
        pet.addEventListener('mouseleave', function() {
            this.style.animationPlayState = 'running';
        });
    });
});
</script>

